<?xml version="1.0" encoding="UTF-8" ?>
<view>
    <header>
        <title>a viewer in MVC</title>
    </header>

    <body>
        <form>
            <name>logoutForm</name>
            <action>logout.sc</action>
            <method>post</method>
            <textView>
                <name>userName</name>
                <label>Login Name:</label>
                <value>Water</value>
            </textView>
            <textView>
                <name>userAge</name>
                <label>Age</label>
                <value>30</value>
            </textView>
            <buttonView>
                <name>logoutButton</name>
                <value>Logout</value>
            </buttonView>
        </form>
    </body>

</view>